{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "lib": ["DOM", "ES2015"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist/types",
        "isolatedModules": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}